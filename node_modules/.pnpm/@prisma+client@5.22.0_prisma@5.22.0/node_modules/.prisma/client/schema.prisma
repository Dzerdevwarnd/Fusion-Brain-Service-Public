generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Image {
  id           String      @id @default(cuid())
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  prompt       String
  style        String
  status       ImageStatus @default(PENDING)
  errorMessage String?
  originalKey  String?
  thumbnailKey String?
}

enum ImageStatus {
  PENDING
  PROCESSING
  READY
  FAILED
}
